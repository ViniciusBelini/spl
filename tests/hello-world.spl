// First game made in SPL - dynamic
show "Guess the number! Type `exit` to leave or `help` to learn.\n"

function startGame()
    number = __SYSTEM__math_rand(0, 100)
    while true
        show "Guess a number between 0 to 100: "
        input = __SYSTEM__io_input()
        guess = int(input)

        if input == "exit"
            return
        else if input == "give up"
            show "The number was "+number+"!\n\n"
            startGame()
            return
        else if type_of(guess) != "<int>"
            show "Type a number!"+"\n"
        else if guess < number
            show "Is more then "+guess+"\n"
        else if guess > number
            show "Is less then "+guess+"\n"
        else if guess == number
            show "Congratulations! The number was "+number+"!\n\n"
            startGame()
            return
        end
    end
end

startGame()
